      <!-- Nav Bar -->

      <nav class="navbar navbar-expand-lg navbar-dark">
        <i class="fa-sharp fa-solid fa-pen-to-square writingicon"></i>
        <a class="logo navbar-brand" href="">Todolist</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#contact">Contact</a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Date -->

      <div class="date" id="date-heading">
        <h1> Sunday, October 30th </h1>
      </div>

      <!-- List -->
    <!-- <div class="big-div"> -->
      <div class="wrapper list">
        <div class="task-input">
        <form class="submit-form" action="/" method="post" autocomplete="off">
            <i class="fa-solid fa-pencil"></i>
            <input class="input-one" type="text" placeholder="Add a new task" name="inputValue" required>
            <button class="submit-button" type="submit">Add</button>
        </form>
        </div>
        <div class="controls">
          <div class="filters">
            <span class="active" id="all">All</span>
            <span id="pending">Pending</span>
            <span id="completed">Completed</span>
          </div>
          <button class="clear-btn">Clear All</button>
        </div>
        <% if(data) { %>
          <% data.forEach(listValue => { %>
          <div class="list-container">
            <ul class="task-box list-value"><%= listValue.list %></ul>
            <a class="list-delete <%= listValue %>">delete</a>
          </div>
          <% }) %>
        <% } %>
      </div>

