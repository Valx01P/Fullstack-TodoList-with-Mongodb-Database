<% for(var i = 0; i < lists.length; i++) { %>
<!-- loops through every list value based on the list length -->
<div class="list-container">
    <tr>
      <div class="task-box list-value">
       <input type="checkbox">
       <h3 class="inputh3"><%= lists[i].note %></h3> <!-- displays the value for the note key from the database -->
      </div>
      <td>
      <a class="list-edit">
        <span class="text-gradient"><i class="fa-solid fa-pen-to-square crud edit"></i></span>
      </a>
      <a class="list-delete">
        <span class="text-gradient"><i class="fa-solid fa-trash-can crud delete"></i></span>
      </a>
      </td>
    </tr>
</div>
<% } %>
<!-- ends the loop function -->

</div> <!--div starts on list form, ends on list data-->